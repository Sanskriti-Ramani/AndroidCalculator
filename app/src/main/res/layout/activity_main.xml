<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="275dp"
        android:text="7"

        android:textSize="40dp"/>
    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b7"
        android:text="4"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b4"
        android:text="1"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b1"
        android:text="."
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b7"
        android:layout_marginTop="275dp"
        android:text="8"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b4"

        android:layout_below="@+id/b8"
        android:text="5"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b1"

        android:layout_below="@+id/b5"
        android:text="2"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b2"
        android:layout_toRightOf="@+id/dot"
        android:text="0"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b8"
        android:layout_marginTop="275dp"
        android:text="9"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b9"
        android:layout_toRightOf="@+id/b5"
        android:text="6"
        android:textSize="40dp"/>


    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b6"
        android:layout_toRightOf="@+id/b2"
        android:text="3"
        android:textSize="40dp"/>


    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/b3"
        android:layout_toRightOf="@+id/b0"
        android:text="="
        android:textSize="40dp"/>

    <Button
        android:id="@+id/del"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="275dp"
        android:layout_toRightOf="@+id/b9"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="DEL"
        android:textSize="30dp" />


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        android:layout_below="@+id/del"
        android:layout_toRightOf="@+id/b6"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="+"
        android:textSize="30dp" />


    <Button
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        android:layout_below="@+id/add"
        android:layout_toRightOf="@+id/b3"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="-"
        android:textSize="30dp" />
    <Button
        android:id="@+id/mul"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        android:layout_below="@+id/sub"
        android:layout_toRightOf="@+id/b3"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="*"
        android:textSize="30dp" />

    <Button
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="58dp"

        android:layout_below="@+id/mul"
        android:layout_toRightOf="@+id/equal"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:text="/"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:layout_marginTop="50dp"

        android:textSize="30dp"
        android:gravity="right"

        android:text=""/>
    <TextView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/first"

        android:textSize="30dp"
        android:gravity="right"

        android:text=""/>


    <TextView
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@+id/second"


        android:gravity="right"
        android:textSize="70dp"
        android:text="0"/>




</RelativeLayout>